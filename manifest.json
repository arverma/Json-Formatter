{
  "manifest_version": 3,
  "name": "JSON Formatter",
  "version": "1.0",
  "description": "A minimalist JSON formatter that respects your privacy. Format, validate, edit, and copy JSON with ease.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open JSON Formatter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 